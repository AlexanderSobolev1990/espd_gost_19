\def\writesubsection#1{
  \begingroup
  \par
  \parindent -1cm
  \leftskip 2cm
  \interlinepenalty\@M
  \vspace{4mm}
  {\subsectionsize#1}%
  \vspace{2mm}
  \par
  \endgroup
}
